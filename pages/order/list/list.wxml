<!--pages/order/list/list.wxml-->
<wxs
  src="../../../utils/tools.wxs"
  module="tools"
/>
<view class="content">
  <van-tabs
    active="{{ active }}"
    sticky
    color="#4cbaab"
    bind:change="onChangeTab"
  >
    <van-tab
      title="全部"
      name="0"
    >
      <van-panel
        wx:for="{{list.data}}"
        wx:key="index"
        title="订单号：{{item.orderNo}}"
        status="{{tools.status(item.dStatus)}}"
        desc="下单时间：{{item.createTime}}"
        use-footer-slot
        custom-class="my-2"
      >
        <view class="p-3">内容</view>
        <view slot="footer" class="text-right">
          <block wx:if="{{item.dStatus === '1'}}">
            <van-button size="small" custom-class="mr-2" data-id="{{item.id}}" bind:click="onCancle">取消</van-button>
            <van-button
              size="small"
              type="danger"
              data-id="{{item.id}}"
              bind:click="onPay"
            >去付款</van-button>
          </block>
        </view>
      </van-panel>
    </van-tab>
    <van-tab
      title="待付款"
      name="1"
    ></van-tab>
    <van-tab
      title="待收货"
      name="8"
    ></van-tab>
    <van-tab
      title="已取消"
      name="9"
    ></van-tab>
    <van-tab
      title="已完成"
      name="10"
    ></van-tab>
  </van-tabs>
</view>
<van-dialog id="van-dialog" />
