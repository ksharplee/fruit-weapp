<!--pages/cart/index/index.wxml-->
<view
  wx:if="{{cartList.length}}"
  class
>
  <van-checkbox-group
    value="{{ result }}"
    bind:change="onChange"
  >
    <view
      wx:for="{{cartList}}"
      wx:key="index"
      class="d-flex align-items-center"
    >
      <van-checkbox
        catch:tap="noop"
        checked-color="#4cbaab"
        name="{{ index }}"
      />
      <view class="col">
        <van-card
          num="2"
          price="2.00"
          desc="描述信息"
          title="商品标题"
          thumb="{{ item.image }}"
        />
      </view>
    </view>
  </van-checkbox-group>
</view>
<van-empty
  wx:else
  custom-class="cart-empty"
  image="/images/cart-empty.png"
  description="购物车空空如也"
/>
